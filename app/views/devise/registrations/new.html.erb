<div class="container mx-auto p-4 w-1/3">
  <div class="bg-white py-6 rounded-lg shadow-md max-w-md mx-auto px-14">
    <h2 class="text-2xl font-bold mb-4 text-center">Registro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.label :email, 'Correo Electr칩nico', class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, class: "mt-1 py-2 px-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>

      <div>
        <%= f.label :password, 'Contrase침a', class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 py-2 px-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>

      <div>
        <%= f.label :password_confirmation, 'Confirmar Contrase침a', class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 py-2 px-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>

      <div class="mt-6">
        <%= f.submit "Registrarse", class: "w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 cursor-pointer font-bold" %>
      </div>
    <% end %>

    <div class="flex mt-4 font-bold" style="text-align:center;">
      <%= link_to "Iniciar Sesi칩n", new_session_path(resource_name), class: "w-full bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600 cursor-pointer text-center" %>
    </div>
  </div>
</div>