<div class="container mx-auto p-4">
  <div class="flex justify-between items-center mb-4">
    <%= link_to new_post_path, class: "flex items-center bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" do %>
      <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 12h14m-7 7V5"/>
      </svg>
      <span class="ml-2">Nuevo Post</span>
    <% end %>
  </div>

  <div class="flex flex-wrap -mx-2">
    <% @posts.each do |post| %>
      <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-2 mb-4">
        <div class="bg-white p-4 rounded-lg shadow-md h-full flex flex-col">
          <h2 class="text-xl font-bold mb-2"><%= link_to post.title, post_path(post), class: "text-blue-500 hover:underline" %></h2>
          <p class="text-gray-700 mb-4 break-words whitespace-normal"><%= post.body %></p>
          <p class="text-gray-500 text-sm mb-4"><%= post.published_at.in_time_zone('Bogota').strftime("%Y-%m-%d %I:%M:%S %P") %></p>
          <div class="mt-auto flex justify-end space-x-2">
            <% if post.user == current_user %>
              <%= button_to edit_post_path(post), method: :get, class: "flex items-center justify-center focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-4 py-2 dark:focus:ring-yellow-900" do %>
                <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.779 17.779 4.36 19.918 6.5 13.5m4.279 4.279 8.364-8.643a3.027 3.027 0 0 0-2.14-5.165 3.03 3.03 0 0 0-2.14.886L6.5 13.5m4.279 4.279L6.499 13.5m2.14 2.14 6.213-6.504M12.75 7.04 17 11.28"/>
                </svg>
              <% end %>
              <%= button_to post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "flex items-center justify-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 dark:focus:ring-red-900" do %>
                <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>