<div class="container mx-auto p-4">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-4"><%= @post.title %></h1>
    <p class="text-gray-700 mb-4">
      <strong>Body:</strong>
      <%= @post.body %>
    </p>
    <p class="text-gray-500 text-sm mb-4">
      <strong>Published At:</strong>
      <%= @post.published_at %>
    </p>
    <div class="flex space-x-2">
      <%= link_to 'Editar', edit_post_path(@post), class: "bg-yellow-400 text-white py-2 px-4 rounded hover:bg-yellow-500" %>
      <%= link_to 'Regresar', posts_path, class: "text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded text-sm px-5 py-2.5" %>
    </div>
  </div>
</div>