<div class="container mx-auto p-4 w-1/3">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Editar Post</h1>

    <%= form_with model: @post, local: true, class: "space-y-4" do |form| %>
      <% if @post.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</strong>
          <ul class="mt-3 list-disc list-inside text-sm">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, 'Título', class: "block text-sm font-bold text-gray-700" %>
        <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-2" %>
      </div>

      <div>
        <%= form.label :body, 'Descripción', class: "block text-sm font-bold text-gray-700" %>
        <%= form.text_area :body, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 py-2 px-2" %>
      </div>

      <div>
        <%= form.submit 'Actualizar', class: "w-full font-bold bg-green-500 text-white rounded hover:bg-green-600 cursor-pointer px-5 py-2.5" %>
      </div>
    <% end %>

    <div class="mt-4 flex text-center">
      <%= link_to 'Regresar', posts_path, class: "w-full font-bold text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded text-sm px-5 py-2.5" %>
    </div>
  </div>
</div>