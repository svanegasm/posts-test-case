<!DOCTYPE html>
<html>
<head>
  <title>BlogApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100 text-gray-900">
  <nav class="bg-white shadow mb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="shrink-0 flex items-center">
            <a href="/" class="text-xl font-bold text-gray-900">BlogApp</a>
          </div>
          <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
            <%= link_to 'Inicio', root_path, class: 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium' %>
          </div>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:items-center">
          <% if user_signed_in? %>
            <%= link_to 'Editar Perfil', edit_user_registration_path, class: 'text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 mx-2' %>
            <%= button_to 'Cerrar Sesión', destroy_user_session_path, method: :delete, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mx-2" %>
          <% else %>
            <%= link_to 'Registrarse', new_user_registration_path, class: 'text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mx-2' %>
            <%= link_to 'Iniciar Sesión', new_user_session_path, class: 'text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mx-2' %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <div class="container mx-auto p-4">
    <% flash.each do |key, value| %>
      <div class="bg-<%= key == 'alert' ? 'red' : 'green' %>-100 border-t border-b border-<%= key == 'alert' ? 'red' : 'green' %>-500 text-<%= key == 'alert' ? 'red' : 'green' %>-700 px-4 py-3" role="alert">
        <p class="text-sm"><%= value %></p>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>